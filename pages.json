{
	"easycom": {
	        "^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue",
			"tui-(.*)": "@/thorui/tui-$1/tui-$1.vue"
	    },
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationStyle": "custom" ,
				"navigationBarTextStyle":"black"
			}
		},
		{
            "path" :"pages/self/self",
            "style" : {
                "navigationBarTitleText": "吃小猪",
                "enablePullDownRefresh": false,
				"navigationBarBackgroundColor":"#FFFFFF"
            }
        }
        ,{
            "path" : "pages/list/list",
            "style" : {
                "enablePullDownRefresh": true,
                "navigationBarTitleText": "美食列表",
				"navigationBarBackgroundColor":"#FFFFFF"
            } 
        },
        {
            "path" : "pages/index/food-details",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "美食详情",
                "enablePullDownRefresh": false,
				"navigationBarBackgroundColor":"#FFFFFF"
            }
            
        }
        ,{
            "path" : "pages/discuss-info/discuss-info",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "讨论详情",
                "enablePullDownRefresh": false,
				"navigationBarBackgroundColor":"#FFFFFF"
            }
            
        }
        ,{
            "path" : "pages/discuss-info/disscuss-reply-page/disscuss-reply-page",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "评论回复",
                "enablePullDownRefresh": false,
				"navigationBarBackgroundColor":"#FFFFFF"
            }
            
        }
        ,{
            "path" : "pages/self/my-content",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "吃小猪",
                "enablePullDownRefresh": false,
				"navigationBarBackgroundColor":"#FFFFFF"
            }
            
        }
        ,{
            "path" : "pages/all-discuss/all-discuss",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "讨论",
                "enablePullDownRefresh": false,
				"navigationBarBackgroundColor":"#FFFFFF",
				 "app-plus": {
				        "animationType": "slide-in-bottom",
				        "animationDuration": 300
				    }
            }
            
        }
        ,{
            "path" : "pages/all-short-comment/all-short-comment",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "短评",
                "enablePullDownRefresh": false,
				"navigationBarBackgroundColor":"#FFFFFF"
            }
            
        }
        ,{
            "path" : "pages/food-push/food-push",
            "style": {
            	"navigationStyle": "custom" ,
            	"navigationBarTextStyle":"black"
            }
        }
        ,{
            "path" : "pages/discuss-push/discuss-push",
            "style" :                                                                                    
            {
                "enablePullDownRefresh": false,
				"navigationStyle": "custom" 
            }
            
        }
    ],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar":{
		"selectedColor":"#1a56b4",
		"borderStyle":"white",
		"list":[
			{
				"pagePath":"pages/index/index",
				"iconPath":"static/icon/eat.png",
				"selectedIconPath":"static/icon/eat-active.png"
			},
			{
				"pagePath":"pages/self/self",
				"iconPath":"static/icon/self.png",
				"selectedIconPath":"static/icon/self-active.png"
			}
		]
	}
}
